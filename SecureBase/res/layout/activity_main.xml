<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="wl.SecureBase.MainActivity" >

    <TextView
            android:id="@+id/tagData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/key"
            android:layout_centerVertical="true"
            android:text="   Data   " />

    <Button
            android:id="@+id/buttonInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="info" />

    <EditText
            android:id="@+id/textKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textData"
            android:layout_marginBottom="35dp"
            android:layout_toLeftOf="@+id/ok"
            android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
            android:id="@+id/textDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/info"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="52dp"
            android:ems="10" />

    <EditText
            android:id="@+id/textData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tagData"
            android:layout_marginTop="14dp"
            android:layout_toLeftOf="@+id/buttonOk"
            android:ems="10" />

    <Button
            android:id="@+id/buttonOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textData"
            android:layout_toRightOf="@+id/textKey"
            android:text="add" />

    <TextView
            android:id="@+id/tagKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textKey"
            android:layout_alignRight="@+id/tagData"
            android:text="   Key   " />

    <Button
            android:id="@+id/buttonDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textDelete"
            android:layout_alignBottom="@+id/textDelete"
            android:layout_alignLeft="@+id/buttonOk"
            android:text="Delete" />

    <TextView
            android:id="@+id/tagDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonDelete"
            android:layout_alignLeft="@+id/textDelete"
            android:text="Delete by key" />

</RelativeLayout>